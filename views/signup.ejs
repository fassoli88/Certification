<body class="home">
  <div class="block-2">
    <a href="/"><img src="/images/programming.jpg" id="logo" height="75px"></a>
    
    <h2 id="topcard">
      Sign up
    </h2>
    <form>
      <div id="T1">
        <label id="L1" for="username" >Name</label>
      </div>
      <input type="text" id="name" placeholder="What's your Name?" name="username" autocomplete="off" required>
      <div id="T1">
        <label id="L1" for="password">Password</label>
      </div>
      <input type="password" id="password" placeholder="What's your Password?" name="pass" autocomplete="off" required>
    
      <div id="T1">
        <label id="L1" for="confirm-pass">Confirm Password</label>
      </div>
      <input type="password" id="confpassword" placeholder="Write your password again" name="confirm-pass" autocomplete="off" required>

      <div id="T1">
        <label id="L1" for="email">Email</label>
      </div>
      <input type="email" id="email" placeholder="What's your Email?" name="email" autocomplete="off" required>

      <input type="submit" id="submit" value="Registration">
    </form>

    <!-- Error message
      <div class="error-message">
    
      </div>
